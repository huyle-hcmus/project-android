<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:gravity="center"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Ui.DeleteTourist">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            app:cardCornerRadius="90dp">

            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:background="#FF0000"
                android:src="@drawable/ic_logo_app"
                android:transitionName="logo_img" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Tourist"
            android:textSize="40dp"
            android:textColor="@color/black"
            android:fontFamily="@font/aliey_regular">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:id="@+id/tourname_find"
                android:hint="Name Tourist"
                app:startIconDrawable="@drawable/ic_ticket"
                app:startIconTint="@color/black"
                android:textColorHint="@color/black"
                app:hintTextColor="@color/black"
                style="@style/LoginTextInputLayoutStyle">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColor="@color/black"/>
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btn_delete_tourist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:backgroundTint="@color/red"
                android:text="DELETE TOURIST"
                android:textColor="@color/white"
                android:textStyle="bold">
            </Button>

            <Button
                android:id="@+id/btn_back_edit_tourist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:backgroundTint="@color/red"
                android:text="BACK"
                android:textColor="@color/white"
                android:textStyle="bold">
            </Button>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>